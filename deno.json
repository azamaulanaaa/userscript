{
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "tasks": {
    "dev:coretax": "deno run -A vite --config ./src/coretax/vite.config.ts",
    "build:coretax": "deno run -A vite build --config ./src/coretax/vite.config.ts",
    "preview:coretax": "deno run -A vite preview --config ./src/coretax/vite.config.ts",

    "dev:notion": "deno run -A vite --config ./src/notion/vite.config.ts",
    "build:notion": "deno run -A vite build --config ./src/notion/vite.config.ts",
    "preview:notion": "deno run -A vite preview --config ./src/notion/vite.config.ts",

    "build": "deno task build:coretax && deno task build:notion"
  },
  "imports": {
    "@/": "./src/",
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@^1.1.1",
    "vite": "npm:vite@^7.1.1",
    "vite-plugin-monkey": "npm:vite-plugin-monkey@^6.0.1"
  }
}
